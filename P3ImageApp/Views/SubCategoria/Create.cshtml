@model P3ImageApp.Models.Tab_Subcategoria
@using System.Web.UI.WebControls
@{
    ViewBag.Title = "Cadastro";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    
    <div class="jumbotron">
        <div class="row">
            <h3>
                SubCategorias - Cadastro</h3>
        </div>
        <div class="row clearfix">
            <div class="col-md-12 column">
                <form role="form" action="">
                <div class="form-group">
                    <label>
                        Categoria vinculada:</label>
                    <br />
                    @Html.DropDownList("idcategoria", "(Selecione)")
                    @Html.ValidationMessageFor(model => model.idcategoria)
                </div>
                <div class="form-group">
                    <label>
                        Descrição:</label>
                    @Html.TextBoxFor(model => model.descricao, new { @class = "form-control", style = "width: 400px", placeholder = "Descrição" })
                    @Html.ValidationMessageFor(model => model.descricao)
                </div>
                <div class="form-group">
                    <label>
                        Slug:</label>
                    @Html.TextBoxFor(model => model.slug, new { @class = "form-control", style = "width: 400px", placeholder = "Slug" })
                    @Html.ValidationMessageFor(model => model.slug)
                </div>
                </form>
            </div>
        </div>
        <p>
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
            <button type="submit" class="btn btn-primary" value="Create">
                Salvar</button>
        </p>
    </div>
}
