@model P3ImageApp.Models.Tab_Campo
@using System.Web.UI.WebControls
@{
    ViewBag.Title = "Alterar";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.idcampo)
    <div class="jumbotron">
        <div class="row">
            <h3>
                Campos - Alteração</h3>
        </div>
        <div class="row clearfix">
            <div class="col-md-12 column">
                <form role="form" action="">
                <div class="form-group">
                    <label>
                        SubCategoria vinculada:</label>
                    <br />
                    @Html.DropDownList("idsubcategoria", "(Selecione)")
                    @Html.ValidationMessageFor(model => model.idsubcategoria)
                </div>
                <div class="form-group">
                    <label>
                        Ordem:</label>
                    @Html.TextBoxFor(model => model.ordem, new { @class = "form-control", style = "width: 400px", placeholder = "Ordem" })
                    @Html.ValidationMessageFor(model => model.ordem)
                </div>
                <div class="form-group">
                    <label>
                        Descrição:</label>
                    @Html.TextBoxFor(model => model.descricao, new { @class = "form-control", style = "width: 400px", placeholder = "Descrição" })
                    @Html.ValidationMessageFor(model => model.descricao)
                </div>
                <div class="form-group">
                    <label>
                        Tipo:</label>
                    @Html.TextBoxFor(model => model.tipo, new { @class = "form-control", style = "width: 400px", placeholder = "Tipo" })
                    @Html.ValidationMessageFor(model => model.tipo)
                </div>
                <div class="form-group">
                    <label>
                        Lista:</label>
                    @Html.TextBoxFor(model => model.lista, new { @class = "form-control", style = "width: 400px", placeholder = "Lista" })
                    @Html.ValidationMessageFor(model => model.lista)
                </div>
                </form>
            </div>
        </div>
        <p>
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
            <button type="submit" class="btn btn-primary" value="Edit">
                Salvar</button>
        </p>
    </div>
}
